<!-- form developed with simple form -->
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.input :content, 
        label: "What you got to say?", 
        input_html: {class: "textarea"}, 
        wrapper: false, 
        label_html: {class: "label"}, 
        placeholder: "Post about something..."
      %>
    </div>
  </div>
  
  <%= f.button :submit, class: "button is-info" %>
<% end %>